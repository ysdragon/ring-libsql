# Load the Ring LibSQL library based on the operating system

if isWindows()
	loadlib("ring_libsql.dll")
but isLinux() or isFreeBSD()
	loadlib("libring_libsql.so")
but isMacOSX()
	loadlib("libring_libsql.dylib")
else
	raise("Unsupported OS! You need to build the library for your OS.")
ok

# Constant definitions for LibSQL data types

LIBSQL_INT = get_libsql_int()
LIBSQL_FLOAT = get_libsql_float()
LIBSQL_TEXT = get_libsql_text()
LIBSQL_BLOB = get_libsql_blob()
LIBSQL_NULL = get_libsql_null()